{
  "name": "findcssvariableusage",
  "displayName": "FindCssVariableUsage",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDidSaveDocument",
    "onDidChangeConfiguration"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "findcssvariableusage.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "findcssvariableusage.highlightSimilarVariables",
        "title": "Highlight css variable usage"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Find Css Variable Usage",
      "properties": {
        "findcssvariableusage.variableFilePaths": {
          "type": "array",
          "default": "[]",
          "description": "Path to the CSS variable files, must be absolute path"
        },
        "findcssvariableusage.textColor": {
          "type": "string",
          "default": "rgba(255, 255, 255, 1)",
          "description": "Color for the text in rgba format (e.g., rgba(255, 255, 255, 1))"
        },
        "findcssvariableusage.colorVariablesFile": {
          "type": "string",
          "default": "<absolute path here>",
          "description": "Absolute path to the css file containing the variables for colors"
        },
        "findcssvariableusage.typographyVariablesFile": {
          "type": "string",
          "default": "<absolute path here>",
          "description": "Absolute path to the css file containing the variables for typography"
        },
        "findcssvariableusage.spacingVariablesFile": {
          "type": "string",
          "default": "<absolute path here>",
          "description": "Absolute path to the css file containing the variables for spacing"
        },
        "findcssvariableusage.radiiVariablesFile": {
          "type": "string",
          "default": "<absolute path here>",
          "description": "Absolute path to the css file containing the variables for border radii"
        },
        "findcssvariableusage.sourceFileProperties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filePath": {
                "type": "string",
                "description": "Path to the source file"
              },
              "checkedProperties": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "CSS properties to check"
              }
            }
          },
          "default": [],
          "description": "List of source files and their associated CSS properties to check"
        },
        "findcssvariableusage.sourceFilePropertiesTwo": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "<absolute path>||<css-key>"
          ],
          "description": "List of source files and their associated CSS properties to check"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}

